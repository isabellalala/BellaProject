<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.stefa.mycustommaps.AddSeedActivity">

    <EditText
        android:id="@+id/seedTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/saveButton"
        android:layout_marginStart="48dp"
        android:layout_marginTop="34dp"
        android:ems="10"
        android:inputType="text"
        android:hint="Type title here"
        tools:layout_editor_absoluteX="29dp"
        tools:layout_editor_absoluteY="60dp" />

    <Button
        android:id="@+id/saveButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="saveSeed"
        android:text="Save"
        tools:layout_editor_absoluteX="255dp"
        tools:layout_editor_absoluteY="60dp" />

    <EditText
        android:id="@+id/seedDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/seedTitle"
        android:layout_below="@+id/seedTitle"
        android:layout_marginTop="80dp"
        android:ems="10"
        android:hint="Type description here"
        android:inputType="text" />

    <Button
        android:id="@+id/takePhotoButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:onClick="takePhoto"
        android:text="Take photo"
        android:layout_below="@+id/seedDescription"
        android:layout_alignStart="@+id/seedDescription"
        android:layout_marginStart="22dp" />


</RelativeLayout>

